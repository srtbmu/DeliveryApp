<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_burger"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/burger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_burger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/takeaways"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/img_burger"
        app:layout_constraintStart_toStartOf="@id/img_burger"
        app:layout_constraintTop_toBottomOf="@id/img_burger" />


</androidx.constraintlayout.widget.ConstraintLayout>